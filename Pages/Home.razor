@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<div class="search-container">
    <input type="text" class="search-input" @bind="SearchQuery" placeholder="Search...">
    <button class="search-button" @onclick="Search">Search</button>
</div>

@code {
    private string SearchQuery { get; set; } = "";

    private async Task Search()
    {
        NavigationManager.NavigateTo($"/search?query={Uri.EscapeDataString(SearchQuery)}");
        await Task.Delay(0); // Adding this line to make the method asynchronous
    }
}
